/* pages/person/person.wxss */
page{
  background-color: rgb(240, 240, 240);
}
.container{
  padding: 0 0;
}
.bgcImage{
  position: relative;
  width: 100%;
  height: 400rpx;
  background-color: rgba(72, 172, 80, 0.699);
}
.userinfo{
  position: absolute;
  left: 80rpx;
  top: 40%;
  display: flex;
  justify-content: space-between;  /*调整上下的*/
}
.avatar{
  display: flex;
  overflow: hidden;
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  background-color: white;
}
.avatarimage {
  width: 100%; /* 图像宽度占满按钮宽度 */
  height: 100%; /* 图像高度占满按钮高度 */
  object-fit: cover; /* 保持图像比例，填充按钮 */
  position: absolute; /* 绝对定位，相对于按钮定位 */
  top: 0; /* 位于按钮顶部 */
  left: 0; /* 位于按钮左侧 */
}
.weui-input::placeholder {
  color: white; /* 设置默认文本颜色为白色 */
}
.id{
  margin: 20rpx 0 0 40rpx;/*上右下左*/
  color: rgb(233, 253, 253);
  letter-spacing: 3rpx;
  margin-bottom: 10rpx;
}

.module{
  position: absolute;
  bottom: -100rpx;
  margin: 0 20rpx;
  width: 710rpx;
  height: 200rpx;
  background-color: #fff;
  border: 1rpx solid #ccc;
  border-radius: 20rpx;
  box-shadow: #ccc  0 0 5rpx 2rpx;
  color: rgb(106, 106, 106);
}
.modulemore{
  margin: 0 20rpx;
  margin-top: 130rpx;
  width: 710rpx;
  height: 300rpx;
  background-color: #fff;
  border: 1rpx solid #ccc;
  border-radius: 20rpx;
  box-shadow: #ccc  0 0 5rpx 2rpx;
  color: rgb(106, 106, 106);
}
/* template/template.wxss */

.navigate_item{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  line-height: 100rpx;
}
.navigate_item image:first-child{
  width: 50rpx;
  height: 50rpx;
  padding: 0 0 0 20rpx;
  padding: 0 20rpx;
}
.navigate_item text{
  flex: 1;
  text-align: start;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.navigate_item image:last-child{
  width: 30rpx;
  height: 30rpx;
  padding: 0 20rpx;
}
/* userInfo_item */
.userInfo_item{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  line-height: 100rpx;
}
.userInfo_item image{
  width: 50rpx;
  height: 50rpx;
  padding: 0 20rpx 0 20rpx;
}
/* 不知道为什么 .userInfo_item text:first-child 选不到它，只好加个类名了 */
.userInfo_item .title{
  flex: 1;
  text-align: start;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.userInfo_item text:last-child{
  margin-right: 20rpx;
  font-size: 20rpx;
  color: rgb(186, 186, 186);
  letter-spacing: 2rpx;
}
.placeholder{
  color: white;
}

