page{
  min-height: 100%;
  background-color: #f8f8f8;
}
.list{
  display: flex;
  flex-wrap: wrap;
}
.item{
  width: 50%;
  box-sizing: border-box;
  padding: 10rpx;
}
.item .content{
  background-color: #fff;
  border-radius: 10rpx;
  overflow: hidden;
  width: 100%;
}
.item .item-img{
  width: 100%;
}
.item .item-img .img{
  width: 100%;
  height: 345rpx;
  vertical-align: middle;
  margin-bottom: 10rpx;
}
.item .name{
  height: 100rpx;
  line-height: 80rpx;
  text-align:center;
  font-size: 24rpx;
  font-weight: bold;
  color: #333;
  text-align: center;
  text-overflow: ellipsis;
}
.leftList,.rightList{
  float: left;
  width: 50%;
}
.leftList .item,.rightList .item{
  width: 100%;
}
.clear-float{
  clear: both;
}
.float-button {
  position: fixed;
  bottom: 20rpx; /* 按钮距离底部的距离 */
  right: 20rpx; /* 按钮距离右侧的距离 */
  background-color: #6aaf61;
  color: #fff;
  width: 100rpx;
  height:100rpx;
  border-radius: 50%;
  line-height: 20rpx;
}

.button-text {
  color: #fff; /* 文本颜色 */
  font-size: 16rpx; /* 文本大小 */
}